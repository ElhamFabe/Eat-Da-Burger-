<!-- Main container-->
<main class="container">
    <section class="col-md-12">
        <article class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="titleHeader">
                    Welcome to Eat Da Burger | Restuarant App
                </h1>
            </div>
        </article>
    </section>
    <!-- form -->
    <section class="col-md-6">
        <article class="row">
            <div class="card">
                <h5 class="card-header">
                    Place Your Order Here:
                </h5>
                <hr>
                <form class="create-form">

                    <div class="form-group">
                        <label for="bu">Make Your Burger:
                        </label>
                        <input type="text" id="bu" name="name">
                    </div>

                    <div class="form-group">
                        <label for="devoured"></label><br>
                        <input type="radio" name="devoured" value="1" checked> Not Hungry<br>
                        <input type="radio" name="devoured" value="0"> Devour It!
                    </div>

                    <button type="submit">Order Burger</button>
                </form>
            </div>
        </article>
    </section>

    <!-- Burger available -->
    <section class="col-md-6">
        <article class="row">
            <div class="card">
                <h5 class="card-header">Burgers Ready to Eat!</h5>
                <hr>
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </article>
    </section>
    <!-- burgers ready to devour -->
    <section class="col-md-6">
        <article class="row">
            <div class="card">
                <h5 class="card-header">
                    Get In My Belly!
                </h5>
                <hr>
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </article>
    </section>
</main>