<h1 class="burgerHeading">Welcome to Eat Da Burger!</h1>

<main class="container">
    <section class="row">
        <article class="col-md-10" id="addBurger">
            <h2>Place Your Burger Order Here: </h2>
            <div class="card">
                <form class="create-form">

                    <div class="form-group">
                        <label for="ca">What Kind of Burger Do You Want?</label>
                        <input type="text" id="ca" name="name">
                    </div>

                    <div class="form-group">
                        <label for="devoured">Get In My Belly!</label><br>
                        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                        <input type="radio" name="devoured" value="0"> Not Hungry...
                    </div>

                    <button type="submit">Order Checkout</button>
                </form>
            </div>
        </article>
    </section>
    <section class="col-md-6">
        <article class="card" id="burgersList">
            <h2>Burgers Ready to Devour/h2>
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
        </article>
    </section>
    <section class="row">
        <article class="col-md-6" id="burgerDevour">
            <h2>Get In My Belly!</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>

        </article>
    </section>
    <footer>
        <h1 class="footNote">Eat Da Burger Application 2020</h1>
    </footer>

</main>